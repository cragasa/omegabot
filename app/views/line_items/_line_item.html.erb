<%= form_for line_item, remote: true do |f| %>
    <%= f.number_field :quantity, value: line_item.quantity.to_i, class: "form-control"%>
    <%= f.hidden_field :product_id, value: line_item.product.id %>
    <p>Name: <%= line_item.product.name %></p>
    <% if line_item.product.image.present? %>
        <p><%= image_tag(line_item.product.image.thumbnail.url, alt:"Product Image")%></p>
    <% end %>
    <p>Description: <%= truncate(line_item.product.description, length: 100 )%></p>
    <p>Price: <%= number_to_currency line_item.product.price %>
    <%= f.submit "Update Quantity", class: "waves-effect waves-light btn-small" %>
    <%= link_to 'Remove Item', line_item, method: :delete, data: {confirm: "Are you sure?"}%>
    <hr>
<% end %>